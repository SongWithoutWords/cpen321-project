-- By default this file is used by `persistFileWith` in Model.hs (which is imported by Foundation.hs)
-- Syntax for this file here: https://github.com/yesodweb/persistent/blob/master/docs/Persistent-entity-syntax.md

User
    email Text
    passwordHash Text
    salt Text
    doctorOrPatientId (Either (Key Doctor) (Key Patient))
    UniqueUser email

Doctor json
    firstName Text
    lastName Text
    deriving Eq
    deriving Show

Patient json
    firstName Text
    lastName Text
    dateOfBirth Day Maybe
    deriving Eq
    deriving Show

-- Request by a patient for a doctor
DoctorPatientRequest json
    doctor DoctorId
    patient PatientId
    UniqueRequest patient doctor
    deriving Eq
    deriving Show

-- Relation between a patient and a doctor
DoctorPatientRelation json
    doctor DoctorId
    patient PatientId
    UniqueRelation patient doctor
    deriving Eq
    deriving Show

Prescription json
    doctor DoctorId
    patient PatientId
    medication Text
    dosageUnit DosageUnit
    amountInitial Double

RecurringDose json
    prescription PrescriptionId
    firstDose UTCTime
    minutesBetweenDoses Int
    dosage Double

DoseTaken json
    prescription PrescriptionId
    time UTCTime
    amount Double

